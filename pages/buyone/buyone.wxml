<block wx:for-items="{{orderList}}" wx:key="{{item.id}}">
  <view class="zan-panel">
    <view class="zan-card">
      <view class="zan-card__thumb">
        <image class="zan-card__img"
          src="https://img.yzcdn.cn/upload_files/2016/11/25/FpqPXlrMRjKwJs8VdTu3ZDJCj4j5.jpeg?imageView2/2/w/200/h/200/q/90/format/jpeg"
          mode="aspectFit"
        ></image>
      </view>
      <view class="zan-card__detail">
        <view class="zan-card__detail-row">
          <view class="zan-card__left-col zan-ellipsis--l2">{{item.name}}
          </view>
        </view>

        <view class="zan-card__detail-row zan-c-gray-darker">
          <!--view style="padding: 40px 15px;background-color: #653553;">
            <template is="zan-quantity" data="{{ ...quantity1, componentId: 'quantity1' }}" />
          </view-->
          <template is="zan-quantity" data="{{ ...quantity3, componentId: 'quantity3', size: 'small' }}" />
          <view class="zan-card__left-col">
            3000克 50%
          </view>
        </view>

        <view class="zan-card__detail-row zan-c-gray-darker">
          <view class="zan-card__left-col zan-c-red">{{item.price}}</view>
        </view>
      </view>
    </view>
  </view>
</block>

  <view class="zan-panel">
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">文本</text>
      <input
        class="zan-form__input zan-cell__bd"
        placeholder="输入要配音的文字"
      />
    </view>
    <view class="zan-cell">
      <view class="zan-cell__bd">选择声音</view>
      <view class="zan-cell__ft">男声</view>
    </view>
    <view class="zan-cell">
      <view class="zan-cell__bd">选择语速:</view>
      <view class="zan-cell__ft">正常</view>
    </view>
  </view>

  <template is="zan-toast" data="{{ zanToast }}"></template>

<view class="zan-panel">
    <view class="zan-btns">
      <button class="zan-btn zan-btn--primary" bindtap="synth">播放配音</button>
      <button class="zan-btn" bindtap="share">分享</button>
    </view>
</view>

<!-- audio.wxml -->
<audio  src="{{src}}" id="myAudio" ></audio>

<button type="primary" bindtap="audioPlay">播放</button>
<button type="primary" bindtap="audioPause">暂停</button>
<button type="primary" bindtap="audio14">设置当前播放时间为14秒</button>
<button type="primary" bindtap="audioStart">回到开头</button>

</view>
