<!--pages/buyone/buyone.wxml-->
<import src="../../zanui-weapp/dist/quantity/index.wxml" />
<import src="../../zanui-weapp/dist/toast/index.wxml" />
<view class="container">

<view class="zan-panel">
  <view  bindtap="bindViewTap" class="userinfo">
    <image  class="userinfo-avatar" src="../../resources/pic/send.png" background-size="cover" mode="scaleToFill"></image>
  </view>

    <view class="zan-cell">
      <view class="zan-cell__bd">
        <input class="zan-form__input zan-cell__bd" style="font-size: 20px" value='{{ inputValue }}' placeholder="输入邮箱地址" bindinput="bindKeyInput"/>
        <button id="sendEmail" class="zan-btn zan-btn--primary" bindtap="send" style="margin-top: 10px;">发送到邮箱</button>
      </view>  
      
        
    </view>
</view>

<view class="zan-panel">

  <view class="userinfo">
    <text class="userinfo">可能被邮箱误识别为垃圾邮件</text>
  </view>

  <view class="userinfo">
    <text class="userinfo">若收件箱没有，请在垃圾箱找找看</text>
  </view>
</view>

</view>
